---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Creative Digital Agency | Home">
    <div class="hero min-h-[70vh] bg-base-200">
        <div class="hero-content text-center">
            <div class="xl:max-w-5/8 lg:max-w-7/8 md:max-w-3/4 sm:max-w-full">
                <h1 class="font-bold text-4xl md:text-5xl lg:text-8xl">
                    Your Business
                    <span class="text-primary">Deserves Better</span>
                    Than a Template.
                </h1>

                <div class="flex justify-center">
                    <p
                        class="py-6 xl:max-w-full lg:max-w-7/8 md:max-w-3/4 sm:max-w-full"
                    >
                        Most websites are built on bloated, 10-year-old
                        technology that frustrates business owners and kills
                        Google rankings. <br /><strong
                            >We build custom, high-performance websites from the
                            ground upâ€”no AI shortcuts, no slow WordPress
                            plugins.</strong
                        >
                    </p>
                </div>
                <div class="flex justify-center pb-12">
                    <h2 class="text-3xl font-bold tracking-tighter">
                        Just <span class="text-primary">pure speed</span> and professional
                        results.
                    </h2>
                </div>

                <div class="flex gap-2 justify-center">
                    <a href="/services" class="btn btn-primary text-white"
                        >View Our Work</a
                    >
                    <a href="/contact" class="btn btn-outline">Get a Quote</a>
                </div>
            </div>
        </div>
    </div>

    <div class="flex justify-center -mt-10">
        <div class="stats shadow bg-base-100 border border-base-300">
            <div class="stat">
                <div class="stat-title">Projects Done</div>
                <div class="stat-value text-primary">150+</div>
            </div>
            <div class="stat">
                <div class="stat-title">Client Rating</div>
                <div class="stat-value text-secondary">4.9/5</div>
            </div>
        </div>
    </div>

    <section class="max-w-6xl mx-auto px-6 py-20">
        <div class="mb-12">
            <h2 class="text-4xl font-bold tracking-tighter">Selected Works.</h2>
            <p class="text-xl opacity-70 mt-4">
                Exploring the intersection of design and performance.
            </p>
        </div>
    </section>
</MainLayout>
